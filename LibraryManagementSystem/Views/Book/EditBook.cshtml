@{
    ViewData["Title"] = "Update Book";
}
@model BookVM
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2 class="jaoas-label">Book</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item sub-label"><a asp-action="Index">Book</a></li>
                    <li class="breadcrumb-item sub-label">Update Book</li>
                </ol>
            </div>

        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <form method="post" asp-controller="Book" asp-action="UpdateBook">
                            <input type="hidden" asp-for="BookId" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Title" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control" asp-for="Title" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Author" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control" asp-for="Author" />
                                        <span asp-validation-for="Author" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Publisher" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control" asp-for="Publisher" />
                                        <span asp-validation-for="Publisher" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PublishDate" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control date-picker" asp-for="PublishDate" value="@Model.PublishDate.ToString("dd-MMMM-yyyy")" />
                                        <span asp-validation-for="PublishDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ISBN" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control" asp-for="ISBN" />
                                        <span asp-validation-for="ISBN" class="text-danger"></span>
                                    </div>
                                </div>
                               
                            </div>
                            <div class="row">
                                <div class="col"></div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-danger ms-auto me-3">Cancel</a>
                                    <button type="submit" class="btn btn-success">Update</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
