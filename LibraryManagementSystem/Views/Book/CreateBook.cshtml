@{
    ViewData["Title"] = "Create Book";
}
@model ViewBookVM
<section class="content-header"></section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <form method="post" asp-controller="Book" asp-action="SaveBook">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Title" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control" asp-for="Title" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Author" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control" asp-for="Author" />
                                        <span asp-validation-for="Author" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Publisher" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control" asp-for="Publisher" />
                                        <span asp-validation-for="Publisher" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PublishedDate" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control date-picker" asp-for="PublishedDate" />
                                        <span asp-validation-for="PublishedDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ISBN" class="control-label"></label>
                                        <span style="color: red; font-size: 20px;">&nbsp;*</span>
                                        <input type="text" class="form-control" asp-for="ISBN" />
                                        <span asp-validation-for="ISBN" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label"></label>
                                        <textarea type="text" class="form-control" asp-for="Description" ></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col"></div>
                                <div class="col">
                                    <button type="button" class="btn btn-danger ms-auto me-3">Cancel</button>
                                    <button type="submit" class="btn btn-success">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
