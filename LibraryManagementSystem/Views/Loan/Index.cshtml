@{ 
    ViewData["Title"] = "Loan";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2 class="jaoas-label">Book</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item sub-label">Book</li>
                </ol>
            </div>

        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="CreateLoan" asp-controller="Book">Create Loan</a>
                    </div>
                    <div class="card-body">
                        <table id="book-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Book Title</th>
                                    <th>Author</th>
                                    <th>Member Name</th>
                                    <th>Loan Date</th>
                                    <th>Due Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            var messageTitle =  "Loan" ;
            showModal("#modal", messageTitle, "@TempData["Message"]");
    })

    </script>
}